@{
	ViewData["Title"] = "Make Order";

}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="~/css/makeorder.css" rel="stylesheet" />
<div class="booking-wrapper">
    <div class="booking-container">
        <div class="hero-section">
            <div class="hero-content">
                <h1>Luxury Hotel Experience</h1>
                <p>Reserve your perfect getaway with premium amenities and exceptional service</p>
                <div class="luxury-badge">
                    <i class="fas fa-star"></i>
                    5-Star Premium Resort
                </div>
            </div>
        </div>

        <form class="booking-form" id="bookingForm" novalidate>
            <div class="form-header">
                <h2>Complete Your Reservation</h2>
                <p>Please fill out the information below to secure your booking</p>
            </div>

            <!-- Guest Information Section -->
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-user"></i>
                    Guest Information
                </div>
                <div class="form-grid two-columns">
                    <div class="form-group required">
                        <label for="fullName">Full Name</label>
                        <input type="text" id="fullName" name="fullName" class="form-input"
                               placeholder="Enter your full name" required>
                        <div class="error-message">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span></span>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label for="email">Email Address</label>
                        <div class="form-group has-icon">
                            <input type="email" id="email" name="email" class="form-input"
                                   placeholder="your.email@example.com" required>
                            <i class="fas fa-envelope input-icon"></i>
                        </div>
                        <div class="error-message">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span></span>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label for="phone">Phone Number</label>
                        <div class="form-group has-icon">
                            <input type="tel" id="phone" name="phone" class="form-input"
                                   placeholder="+1 (555) 123-4567" required>
                            <i class="fas fa-phone input-icon"></i>
                        </div>
                        <div class="error-message">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span></span>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label for="nationality">Nationality</label>
                        <input list="nationalities" id="nationality" name="nationality"
                               class="form-input" placeholder="Select your nationality" required>
                        <datalist id="nationalities">
                            <option value="United States"></option>
                            <option value="Canada"></option>
                            <option value="United Kingdom"></option>
                            <option value="Germany"></option>
                            <option value="France"></option>
                            <option value="Australia"></option>
                            <option value="Japan"></option>
                            <option value="South Korea"></option>
                            <option value="China"></option>
                            <option value="India"></option>
                            <option value="Brazil"></option>
                            <option value="Mexico"></option>
                            <option value="Argentina"></option>
                            <option value="Egypt"></option>
                            <option value="South Africa"></option>
                        </datalist>
                        <div class="error-message">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span></span>
                        </div>
                    </div>
                </div>
                <div class="form-group required">
                    <label for="idNumber">National ID or Passport Number</label>
                    <div class="form-group has-icon">
                        <input type="text" id="idNumber" name="idNumber" class="form-input"
                               placeholder="Enter your ID or passport number" required>
                        <i class="fas fa-id-card input-icon"></i>
                    </div>
                    <div class="error-message">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span></span>
                    </div>
                </div>
            </div>

            <!-- Booking Details Section -->
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-calendar-alt"></i>
                    Booking Details
                </div>

                <div class="form-group">
                    <label>Check-in & Check-out Dates</label>
                    <div class="date-inputs">
                        <div class="form-group required">
                            <label for="checkinDate">Check-in Date</label>
                            <input type="date" id="checkinDate" name="checkinDate"
                                   class="form-input" required>
                            <div class="error-message">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="checkoutDate">Check-out Date</label>
                            <input type="date" id="checkoutDate" name="checkoutDate"
                                   class="form-input" required>
                            <div class="error-message">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span></span>
                            </div>
                        </div>
                        <div class="nights-display">
                            <div class="nights-number" id="nightsDisplay">0</div>
                            <div>Nights</div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Number of Guests</label>
                    <div class="guest-counter">
                        <div class="counter-group">
                            <div class="counter-label">
                                <i class="fas fa-user"></i>
                                Adults
                            </div>
                            <div class="counter-controls">
                                <button type="button" class="counter-btn" id="adultsDecrease">-</button>
                                <div class="counter-value" id="adultsCount">1</div>
                                <button type="button" class="counter-btn" id="adultsIncrease">+</button>
                            </div>
                        </div>
                        <div class="counter-group">
                            <div class="counter-label">
                                <i class="fas fa-child"></i>
                                Children
                            </div>
                            <div class="counter-controls">
                                <button type="button" class="counter-btn" id="childrenDecrease">-</button>
                                <div class="counter-value" id="childrenCount">0</div>
                                <button type="button" class="counter-btn" id="childrenIncrease">+</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Room Selection</label>
                    <div class="room-selection">
                        <div class="form-group required">
                            <label for="roomType">Type of Room</label>
                            <select id="roomType" name="roomType" class="form-input" required>
                                <option value="">Select room type</option>
                                <optgroup label="Standard Rooms">
                                    <option value="single" data-price="150">Single Room - $150/night</option>
                                    <option value="double" data-price="200">Double Room - $200/night</option>
                                    <option value="twin" data-price="220">Twin Room - $220/night</option>
                                </optgroup>
                                <optgroup label="Superior Rooms">
                                    <option value="superior" data-price="280">Superior Room - $280/night</option>
                                    <option value="deluxe" data-price="350">Deluxe Room - $350/night</option>
                                </optgroup>
                                <optgroup label="Suites">
                                    <option value="junior-suite" data-price="450">Junior Suite - $450/night</option>
                                    <option value="executive-suite" data-price="650">Executive Suite - $650/night</option>
                                    <option value="presidential" data-price="1200">Presidential Suite - $1,200/night</option>
                                </optgroup>
                                <optgroup label="Special View Rooms">
                                    <option value="sea-view" data-price="320">Sea View Room - $320/night</option>
                                    <option value="city-view" data-price="250">City View Room - $250/night</option>
                                    <option value="garden-view" data-price="230">Garden View Room - $230/night</option>
                                </optgroup>
                            </select>
                            <div class="error-message">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="numberOfRooms">Number of Rooms</label>
                            <div class="counter-group">
                                <div class="counter-controls">
                                    <button type="button" class="counter-btn" id="roomsDecrease">-</button>
                                    <div class="counter-value" id="roomsCount">1</div>
                                    <button type="button" class="counter-btn" id="roomsIncrease">+</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Services Section -->
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-concierge-bell"></i>
                    Additional Services
                </div>

                <div class="form-group">
                    <label>Premium Services</label>
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="extraBed" name="services" value="extra-bed" data-price="50">
                            <label for="extraBed" class="checkbox-label">
                                <div class="custom-checkbox"></div>
                                <div>
                                    <strong>Extra Bed</strong><br>
                                    <small>+$50/night</small>
                                </div>
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="breakfast" name="services" value="breakfast" data-price="35">
                            <label for="breakfast" class="checkbox-label">
                                <div class="custom-checkbox"></div>
                                <div>
                                    <strong>Breakfast in Room</strong><br>
                                    <small>+$35/day</small>
                                </div>
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="airportPickup" name="services" value="airport-pickup" data-price="75">
                            <label for="airportPickup" class="checkbox-label">
                                <div class="custom-checkbox"></div>
                                <div>
                                    <strong>Airport Pickup</strong><br>
                                    <small>+$75 one-way</small>
                                </div>
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="spa" name="services" value="spa" data-price="120">
                            <label for="spa" class="checkbox-label">
                                <div class="custom-checkbox"></div>
                                <div>
                                    <strong>Spa Package</strong><br>
                                    <small>+$120/session</small>
                                </div>
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="decoration" name="services" value="decoration" data-price="100">
                            <label for="decoration" class="checkbox-label">
                                <div class="custom-checkbox"></div>
                                <div>
                                    <strong>Special Decoration</strong><br>
                                    <small>+$100 (flowers/cake)</small>
                                </div>
                            </label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="minibar" name="services" value="minibar" data-price="25">
                            <label for="minibar" class="checkbox-label">
                                <div class="custom-checkbox"></div>
                                <div>
                                    <strong>Premium Minibar</strong><br>
                                    <small>+$25/day</small>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="specialRequests">Special Requests</label>
                    <div class="textarea-group">
                        <textarea id="specialRequests" name="specialRequests" class="form-input"
                                  placeholder="Please let us know about any special requests, dietary restrictions, accessibility needs, or celebration arrangements..."
                                  rows="4"></textarea>
                    </div>
                </div>
            </div>

            <!-- Payment Information Section -->
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-credit-card"></i>
                    Payment Information
                </div>

                <div class="form-group required">
                    <label>Payment Method</label>
                    <div class="radio-group">
                        <div class="radio-item">
                            <input type="radio" id="creditCard" name="payment" value="credit-card" required>
                            <label for="creditCard" class="radio-label">
                                <div class="custom-radio"></div>
                                <div>
                                    <i class="fas fa-credit-card"></i>
                                    Credit Card
                                </div>
                            </label>
                        </div>
                        <div class="radio-item">
                            <input type="radio" id="debitCard" name="payment" value="debit-card">
                            <label for="debitCard" class="radio-label">
                                <div class="custom-radio"></div>
                                <div>
                                    <i class="fas fa-money-check"></i>
                                    Debit Card
                                </div>
                            </label>
                        </div>
                        <div class="radio-item">
                            <input type="radio" id="paypal" name="payment" value="paypal">
                            <label for="paypal" class="radio-label">
                                <div class="custom-radio"></div>
                                <div>
                                    <i class="fab fa-paypal"></i>
                                    PayPal
                                </div>
                            </label>
                        </div>
                        <div class="radio-item">
                            <input type="radio" id="applePay" name="payment" value="apple-pay">
                            <label for="applePay" class="radio-label">
                                <div class="custom-radio"></div>
                                <div>
                                    <i class="fab fa-apple-pay"></i>
                                    Apple Pay
                                </div>
                            </label>
                        </div>
                        <div class="radio-item">
                            <input type="radio" id="bankTransfer" name="payment" value="bank-transfer">
                            <label for="bankTransfer" class="radio-label">
                                <div class="custom-radio"></div>
                                <div>
                                    <i class="fas fa-university"></i>
                                    Bank Transfer
                                </div>
                            </label>
                        </div>
                        <div class="radio-item">
                            <input type="radio" id="cash" name="payment" value="cash">
                            <label for="cash" class="radio-label">
                                <div class="custom-radio"></div>
                                <div>
                                    <i class="fas fa-money-bill-wave"></i>
                                    Cash (on arrival)
                                </div>
                            </label>
                        </div>
                    </div>
                    <div class="error-message">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span></span>
                    </div>
                </div>
            </div>

            <!-- Price Summary -->
            <div class="price-summary">
                <h3 style="color: var(--dark-brown); margin-bottom: 1rem; font-family: 'Playfair Display', serif;">
                    <i class="fas fa-receipt"></i>
                    Booking Summary
                </h3>
                <div class="price-item">
                    <span>Room Rate (<span id="summaryNights">0</span> nights × <span id="summaryRooms">1</span> room)</span>
                    <span id="roomTotal">$0</span>
                </div>
                <div id="servicesBreakdown"></div>
                <div class="price-item" style="color: var(--light-brown);">
                    <span>Taxes & Fees (12%)</span>
                    <span id="taxesTotal">$0</span>
                </div>
                <div class="price-total">
                    <span>Total Amount</span>
                    <span id="grandTotal">$0</span>
                </div>
            </div>

            <!-- Terms and Conditions -->
            <div class="terms-agreement">
                <input type="checkbox" id="terms" name="terms" class="terms-checkbox" required>
                <div class="terms-text">
                    <label for="terms">
                        I agree to the <a href="#" target="_blank">Terms & Conditions</a>,
                        <a href="#" target="_blank">Privacy Policy</a>, and
                        <a href="#" target="_blank">Cancellation Policy</a>.
                        I understand that a deposit may be required and cancellation fees may apply according to the hotel policy.
                    </label>
                </div>
            </div>

            <!-- Submit Section -->
            <div class="submit-section">
                <button type="submit" class="submit-btn" id="submitBtn">
                    <div class="loading-spinner"></div>
                    <i class="fas fa-lock"></i>
                    Secure Booking
                </button>
                <p style="margin-top: 1rem; color: var(--light-brown); font-size: 0.9rem;">
                    <i class="fas fa-shield-alt"></i>
                    Your information is secured with 256-bit SSL encryption
                </p>
            </div>
        </form>
    </div>
</div>

<!-- Success Modal -->
<div class="success-modal" id="successModal">
    <div class="modal-content">
        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>
        <h3 style="color: var(--dark-brown); margin-bottom: 1rem;">Booking Confirmed!</h3>
        <p style="color: var(--medium-brown); margin-bottom: 2rem;">
            Thank you for your reservation. A confirmation email has been sent to your email address.
        </p>
        <div style="background: var(--light-gold); padding: 1rem; border-radius: 8px; margin-bottom: 2rem;">
            <strong>Confirmation Number: <span id="confirmationNumber"></span></strong>
        </div>
        <button onclick="closeModal()" style="background: var(--primary-gold); color: white; border: none; padding: 0.75rem 2rem; border-radius: 8px; cursor: pointer;">
            Close
        </button>
    </div>
</div>
@section Scripts {
    <script src="~/js/makeorder.js"></script>
}