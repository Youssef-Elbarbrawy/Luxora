@{
    ViewData["Title"] = "Logout";
}
<link href="~/css/logout.css" rel="stylesheet" />
<div class="profile-container">
    <div class="gold-accent"></div>
    <div class="profile-header">
        <h1><i class="fas fa-door-open"></i> Logout</h1>
        <p class="welcome-text">Are you sure you want to logout from your luxury account?</p>
    </div>

    <div class="profile-content">
        <div class="logout-container">
            <div class="logout-icon">
                <i class="fas fa-sign-out-alt"></i>
            </div>

            <div class="logout-message">
                <p>You will be signed out of your account and returned to the login page.</p>
            </div>

            <div class="logout-details">
                <h3><i class="fas fa-info-circle"></i> What happens when you logout:</h3>
                <ul>
                    <li><i class="fas fa-times-circle"></i> Your session will be ended</li>
                    <li><i class="fas fa-shield-alt"></i> All authentication tokens will be revoked</li>
                    <li><i class="fas fa-history"></i> Any unsaved changes will be lost</li>
                    <li><i class="fas fa-lock"></i> You'll need to login again to access your account</li>
                </ul>
            </div>

            <div class="logout-actions">
                <button class="confirm-btn" id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Yes, Logout</button>
                <a href="#" class="cancel-btn"><i class="fas fa-times"></i> Cancel</a>
            </div>
        </div>
    </div>
</div>

<div class="confirmation-modal" id="confirmationModal">
    <div class="modal-content">
        <div class="modal-icon">
            <i class="fas fa-question-circle"></i>
        </div>
        <h2 class="modal-title">Confirm Logout</h2>
        <p class="modal-message">Are you absolutely sure you want to sign out of your account?</p>
        <div class="modal-actions">
            <button class="modal-btn modal-confirm" id="finalLogout">Yes, Log Me Out</button>
            <button class="modal-btn modal-cancel" id="cancelLogout">Cancel</button>
        </div>
    </div>
</div>
<script src="~/js/logout.js" ></script>